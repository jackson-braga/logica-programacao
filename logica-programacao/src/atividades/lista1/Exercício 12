import java.util.Scanner;

public class Lista1 {
    public static void main(String[] args) {

        Scanner scann = new Scanner(System.in);

        System.out.println("Informe o primeiro lado");
        double lado1 = scann.nextDouble();
        System.out.println("Informe o segundo lado");
        double lado2 = scann.nextDouble();
        System.out.println("Informe o terceiro lado");
        double lado3 = scann.nextDouble();

        if (lado1 < lado2 + lado3 && lado2 < lado1 + lado3 && lado3 < lado1 + lado2) {
            System.out.println("Formam um triangulo");
        } else {
            System.out.println("As medidas nÃ£o formam um triangulo");
        }
    }
}
