import java.util.Scanner;
public class Atividades {
    public static void main(String[] args) {
        Scanner Sc = new Scanner(System.in);

        // Salario Fixo

        System.out.println("Informe seu salário fixo");
        double salarioFixo = Sc.nextDouble();

        // Comissão de 5% por total de venda em $

        System.out.println("Informe o valor total que você vendeu este mês ");
        double totalVendas = Sc.nextDouble();

       double comissao = (totalVendas*5) /100;
       double salarioTotal = comissao + salarioFixo;
        System.out.println("Seu salário mais sua comissao é de " + salarioTotal );



        Sc.close();
    }
}
