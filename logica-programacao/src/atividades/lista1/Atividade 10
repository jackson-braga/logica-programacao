import java.util.Scanner;
public class Atividades {
    public static void main(String[] args) {
        Scanner Sc = new Scanner(System.in);

        System.out.println("Informe as horas trabalhadas ");
        double horasTrabalhadas = Sc.nextDouble();
        System.out.println("Informe o salário por hora");
        double salarioHora = Sc.nextDouble();
        double horaExtra = salarioHora * 0.5;
        double adicionalHoraExtra = salarioHora + horaExtra;
        double horaExtraTotal = 0;
        if (horasTrabalhadas > 160) {
            horaExtraTotal = (horasTrabalhadas - 160) * adicionalHoraExtra;
        }

        double salarioFinal = (160 * salarioHora) + adicionalHoraExtra;
        System.out.println("Seu salário Total é : " + salarioFinal);


        Sc.close();
    }
}
