import java.util.Scanner;

public class Exercicio8{
    public static void main(String[] args) {
        double nota1;
        double nota2;
        double notafinal;
        String continua;
        Scanner scan = new Scanner(System.in);
        do {
            do {
                System.out.println("Por favor digite a primeira nota");
                nota1 = scan.nextInt();
                if (nota1 < 0 || nota1 > 10) {
                    System.out.println("Valor inválido");
                    continue;
                }
            } while (nota1 < 0 || nota1 > 10);
            do {
                System.out.println("Por favor digite a segunda nota");
                nota2 = scan.nextInt();
                if (nota2 < 0 || nota2 > 10) {
                    System.out.println("Valor inválido");
                    continue;
                }
            } while (nota2 < 0 || nota2 > 10);
            notafinal = (nota1 + nota2) / 2;
            System.out.printf("A média final é de " + "%.2f", notafinal);
            System.out.println("\nContinuar? S/N");
            continua = scan.next();
            continua = continua.toUpperCase();
        }while(continua.equals("S"));
        }
}
